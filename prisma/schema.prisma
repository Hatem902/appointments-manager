generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Vendor {
  id   String @id @default(cuid())
  name String
}

model Buyer {
  id      String @id @default(cuid())
  name    String
  company String
}

model Appointment {
  id        String   @id @default(cuid())
  title     String
  type      String
  location  String?
  vendorId  String
  buyerId   String
  startTime DateTime
  endTime   DateTime
}

